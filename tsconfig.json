{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "compileOnSave": false,
  "filesGlob": [
    "./src/**/*.ts",
    "./typings/index.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
